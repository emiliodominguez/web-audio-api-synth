{
    "scripts": {
        "serve": "live-server --port=3000",
        "sass:watch": "sass scss/main.scss style.css --watch --no-source-map --style=compressed",
        "sass": "sass scss/main.scss style.css --no-source-map --style=compressed",
        "dev": "npm-run-all --parallel serve sass:watch",
        "start": "npm-run-all --parallel serve sass"
    },
    "devDependencies": {
        "live-server": "^1.2.2",
        "npm-run-all": "^4.1.5",
        "sass": "^1.55.0"
    }
}
